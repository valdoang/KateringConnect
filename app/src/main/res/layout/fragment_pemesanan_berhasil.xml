<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_rounded"
    tools:context=".view.user.pemesanan.PemesananBerhasilFragment">

    <ImageView
        android:id="@+id/iv_success"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/success_icon"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_pesanan_diproses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pemesanan_berhasil"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/green_200"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_success"
        app:layout_constraintStart_toStartOf="@id/iv_success"
        app:layout_constraintEnd_toEndOf="@id/iv_success"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>