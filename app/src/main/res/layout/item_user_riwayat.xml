<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_pemesanan_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tanggal Pemesanan"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_pemesanan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                tools:text="Nama Katering"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pemesanan_date"
                app:layout_constraintStart_toStartOf="@id/tv_pemesanan_date"/>

            <TextView
                android:id="@+id/tv_pemesanan_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                tools:text="25x"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv_pemesanan_name"
                app:layout_constraintStart_toStartOf="@id/tv_pemesanan_name"/>

            <TextView
                android:id="@+id/tv_pemesanan_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                tools:text="Paket 1"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pemesanan_name"
                app:layout_constraintStart_toEndOf="@id/tv_pemesanan_jumlah"/>

            <TextView
                android:id="@+id/tv_pemesanan_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                tools:text="Rp. 875.000"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pemesanan_jumlah"
                app:layout_constraintStart_toStartOf="@id/tv_pemesanan_jumlah"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_pemesanan_status"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                tools:text="Proses"
                android:background="@drawable/status_bg"
                android:textSize="12sp"
                android:textColor="@color/orange"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pemesanan_date"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Pesan Lagi"
                app:cornerRadius="10dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/tv_pemesanan_status"
                app:layout_constraintTop_toBottomOf="@id/tv_pemesanan_status" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>