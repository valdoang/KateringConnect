<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.vendormain.ui.akun.VendorAkunFragment">

    <TextView
        android:id="@+id/title_vendor_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/title_akun_anda"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/orange"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_vendor_akun"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_profile"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title_vendor_akun"
        app:layout_constraintStart_toStartOf="@id/title_vendor_akun"
        app:layout_constraintEnd_toEndOf="@id/title_vendor_akun"/>

    <TextView
        android:id="@+id/tv_vendor_akun_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Murni Catering"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/iv_vendor_akun"
        app:layout_constraintStart_toStartOf="@id/iv_vendor_akun"
        app:layout_constraintTop_toBottomOf="@id/iv_vendor_akun" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_vendor_akun_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_vendor_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_star_24"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_vendor_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:text="4,5 (1.212)"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/iv_vendor_star"
                app:layout_constraintStart_toEndOf="@id/iv_vendor_star"/>

            <ImageView
                android:id="@+id/iv_vendor_star_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_chevron_right_24"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/iv_vendor_star"
                app:layout_constraintBottom_toTopOf="@id/iv_city"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/iv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_location_city_24"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_vendor_star"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:text="Surabaya"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/iv_city"
                app:layout_constraintStart_toEndOf="@id/iv_city"/>

            <ImageView
                android:id="@+id/iv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/iv_city"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:text="Jl. Menganti"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/iv_address"
                app:layout_constraintStart_toEndOf="@id/iv_address"/>

            <ImageView
                android:id="@+id/iv_no_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_phone_24"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/iv_address"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_no_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="8dp"
                android:text="08121654849"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/iv_no_phone"
                app:layout_constraintStart_toEndOf="@id/iv_no_phone"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_vendor_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Kategori"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/cv_info"
        app:layout_constraintTop_toBottomOf="@id/cv_info" />

</androidx.constraintlayout.widget.ConstraintLayout>