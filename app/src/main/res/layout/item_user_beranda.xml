<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_katering"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/default_vendor_profile"
        app:civ_border_width="0.5dp"
        app:civ_border_color="@color/grey"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_katering_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Nama Katering"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_katering_kategori"
        android:contentDescription="@string/gambar"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/kategori_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_katering_name"
        app:layout_constraintStart_toStartOf="@id/tv_katering_name" />

    <TextView
        android:id="@+id/tv_katering_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Tumpeng, Nasi Kotak, Prasmanan"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:layout_marginStart="109dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_katering_name" />

    <ImageView
        android:id="@+id/iv_katering_star"
        android:contentDescription="@string/gambar"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/star_icon"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_katering_kategori"
        app:layout_constraintStart_toStartOf="@id/tv_katering_name" />

    <TextView
        android:id="@+id/tv_katering_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="5 (1)"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_katering_kategori"
        app:layout_constraintStart_toEndOf="@id/iv_katering_star" />

    <ImageView
        android:id="@+id/iv_katering_ongkir"
        android:contentDescription="@string/gambar"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ongkir_icon"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_katering_star"
        app:layout_constraintStart_toStartOf="@id/tv_katering_name" />

    <TextView
        android:id="@+id/tv_katering_ongkir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rp15.000"
        android:visibility="visible"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/tv_katering_star"
        app:layout_constraintStart_toEndOf="@id/iv_katering_ongkir"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/white_200"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>